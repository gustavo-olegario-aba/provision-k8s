apprepository:
  initialRepos:
  - name: bitnami
    url: https://charts.bitnami.com/bitnami
  - name: local
    url: http://helmrepo-chartmuseum.{{ cluster_support_namespace }}/chartmuseum

frontend:
  replicaCount: 1

dashboard:
  replicaCount: 1
  
kubeops:
  replicaCount: 1
  
postgresql:
  replication:
    enabled: false

ingress:
  enabled: true
  hostname: {{ cluster_hostname }}
  path: /kubeapps
  annotations:
    nginx.ingress.kubernetes.io/proxy-read-timeout: "600"
    kubernetes.io/ingress.class: {{ cluster_ingress_class }}
